        <Button x:Name="ButtonLogin" Content="Login" HorizontalAlignment="Left" VerticalAlignment="Top" Width="58" Grid.Column="2" Margin="10,10,0,0" Grid.Row="2" Height="25" Click="LoginClick"/>
